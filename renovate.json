{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["every weekend"],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "description": "Node.js major updates",
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"],
      "enabled": true,
      "major": {
        "enabled": true
      },
      "labels": ["dependencies", "node", "major"]
    },
    {
      "description": "Next.js updates",
      "matchPackageNames": ["next"],
      "labels": ["dependencies", "next.js"],
      "automerge": false
    },
    {
      "description": "React updates",
      "matchPackageNames": ["react", "react-dom"],
      "labels": ["dependencies", "react"],
      "automerge": false
    },
    {
      "description": "Express updates",
      "matchPackageNames": ["express"],
      "labels": ["dependencies", "express"],
      "automerge": false
    },
    {
      "description": "Database driver updates",
      "matchPackageNames": ["pg", "sqlite", "sqlite3"],
      "labels": ["dependencies", "database"],
      "automerge": false
    },
    {
      "description": "UI library updates (Radix UI)",
      "matchPackagePatterns": ["^@radix-ui/"],
      "groupName": "Radix UI",
      "labels": ["dependencies", "ui"],
      "automerge": false
    },
    {
      "description": "TypeScript and types updates",
      "matchPackageNames": ["typescript"],
      "matchPackagePatterns": ["^@types/"],
      "groupName": "TypeScript and types",
      "labels": ["dependencies", "typescript"],
      "automerge": true
    },
    {
      "description": "Dev dependencies (minor and patch)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Dev dependencies (non-major)",
      "labels": ["dependencies", "dev"],
      "automerge": true
    },
    {
      "description": "Security updates",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "labels": ["dependencies", "security"],
      "automerge": true,
      "schedule": ["at any time"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on Monday"]
  },
  "prCreation": "immediate",
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "ignoreDeps": []
}
