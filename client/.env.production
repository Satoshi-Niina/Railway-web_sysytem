# ===================================
# Client (Next.js) - 本番環境変数テンプレート
# ===================================
# このファイルは本番環境のテンプレートです
# 実際の環境変数はGitHub Secretsから渡されます

# 環境設定
NODE_ENV=production

# アプリケーションURL（Cloud Runのデプロイ先URL）
# GitHub Secret: NEXT_PUBLIC_APP_URL
# 例: https://railway-client-xxx-an.a.run.app
NEXT_PUBLIC_APP_URL=

# API URL（Cloud RunのサーバーURL）
# GitHub Secret: NEXT_PUBLIC_API_URL
# 例: https://railway-server-xxx-an.a.run.app
NEXT_PUBLIC_API_URL=

# ダッシュボードURL
# GitHub Secret: NEXT_PUBLIC_DASHBOARD_URL
NEXT_PUBLIC_DASHBOARD_URL=

# データベースURL（Cloud SQL接続 - Unixソケット経由）
# GitHub Secret: DATABASE_URL_PRODUCTION
# 例: postgresql://postgres:PASSWORD@/webappdb?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL=

# Cloud SQL接続名
# GitHub Secret: CLOUD_SQL_INSTANCE_CONNECTION_NAME
# 例: maint-vehicle-management:asia-northeast2:free-trial-first-project
CLOUD_SQL_INSTANCE_CONNECTION_NAME=

# ログレベル
NEXT_PUBLIC_LOG_LEVEL=info

# 認証設定
NEXT_PUBLIC_ENABLE_AUTH=false
