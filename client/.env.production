# ===================================
# Client - 本番環境用設定テンプレート
# ===================================
# 本番環境では、このファイルをコピーして
# .env.production.local として使用し、
# 適切な値に置き換えてください。
# ===================================

# 環境設定
NODE_ENV=production

# アプリケーション設定
# ※本番環境のドメインに変更してください
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_API_URL=https://your-production-domain.com/api

# バックエンドサーバーURL
# ※本番環境のサーバードメインに変更してください
NEXT_PUBLIC_SERVER_URL=https://your-production-server.com

# CORS設定（本番環境）
# ※本番環境の許可するオリジンを指定してください
NEXT_PUBLIC_ALLOWED_ORIGINS=https://your-production-domain.com

# ログレベル
NEXT_PUBLIC_LOG_LEVEL=error

# 開発モード（本番環境では必ずfalse）
NEXT_PUBLIC_DEV_MODE=false

# ファイルアップロード設定
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Supabase設定（使用する場合）
# ※本番環境のSupabase接続情報に変更してください
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key

# セキュリティ設定
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_FORCE_HTTPS=true
