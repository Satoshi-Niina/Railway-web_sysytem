# ===================================
# Server - 本番環境用設定 (.env.production)
# ===================================

# 環境設定
NODE_ENV=production

# データベース設定
# GitHub Secrets または Cloud Run の環境変数から設定してください
DATABASE_URL=

# 接続プール設定
DB_POOL_MIN=5
DB_POOL_MAX=20

# CORS設定（本番環境のフロントエンドURLを指定）
ALLOWED_ORIGINS=https://railway-client-800711608362.asia-northeast2.run.app
CORS_CREDENTIALS=true

# ログ設定
LOG_LEVEL=info

# セッション設定
# GitHub Secrets 等から注入するため、ここでは空欄にします
SESSION_SECRET=
SESSION_TIMEOUT=1800000  # 30分

# セキュリティ設定
ENABLE_HELMET=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000  # 15分
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS設定
FORCE_HTTPS=true

# 開発モード（本番環境では必ずfalse）
DEV_MODE=false
DEBUG=false
